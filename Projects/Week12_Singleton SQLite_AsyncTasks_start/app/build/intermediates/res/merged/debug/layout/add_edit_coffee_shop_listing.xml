<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="9"
    android:useDefaultMargins="true" >

    <TextView
        android:id="@+id/text_date"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="@string/label_name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_gravity="fill_horizontal"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:ems="6"
        android:inputType="textCapWords"
        android:maxLines="1"
        >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_address"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="@string/label_rating"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_rating"
        android:layout_gravity="fill_horizontal"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:ems="6"
        android:inputType="number"
        android:maxLines="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_delete"
        android:id="@+id/button_delete_listing"
        android:layout_column="0"
        android:layout_row="8" />

    <Button
        android:id="@+id/button_save_listing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_row="8"
        android:text="@string/label_save" />

</GridLayout><!-- From: file:/C:/Users/R/Dropbox%20(Personal)/_ITP%20341/_Projects/ITP%20341%20-%20Lectures/Week12_Singleton%20SQLite_AsyncTasks%20-%20start/app/src/main/res/layout/add_edit_coffee_shop_listing.xml -->