<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".1">

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:id="@+id/progressBarMasterVolLeft"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_drawable"
                    android:indeterminate="false" />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:id="@+id/progressBarMasterVolRight"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_drawable"
                    android:layout_marginLeft="@dimen/activity_min_widget_distance" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:id="@+id/textViewMasterVolume"
                        android:layout_marginLeft="@dimen/activity_min_widget_distance" />

                    <itp341.webb.jerry.greenbeatmachine.VerticalSlider
                        android:id="@+id/seekbarMasterVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/activity_min_widget_distance"
                        android:max="100"
                        android:layout_weight=".1"
                        android:layout_marginBottom="@dimen/activity_min_widget_distance"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/master"
                android:id="@+id/textViewMasterTrackLable"
                android:layout_weight=".9"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:layout_marginLeft="@dimen/activity_min_widget_distance"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:layout_weight=".1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:id="@+id/textViewL1"
                    android:layout_weight=".10"
                    android:textStyle="bold|italic" />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBarTrack1Pan"
                    android:layout_weight=".8"
                    android:progress="50"
                    android:max="100"
                    android:indeterminate="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:id="@+id/textViewR1"
                    android:layout_weight=".10"
                    android:textStyle="bold|italic" />

            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/pan"
                android:id="@+id/textViewPan1"
                android:layout_weight=".1"
                android:layout_gravity="center_horizontal"
                android:textIsSelectable="false"
                android:textSize="@dimen/medium_text_size"
                android:gravity="center" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_weight=".7"
                android:weightSum="1">

                <itp341.webb.jerry.greenbeatmachine.VerticalSlider
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:max="100"
                    android:id="@+id/seekBarTrack1Volume"
                    android:layout_weight=".7"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:progress="80"
                    android:indeterminate="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="80"
                        android:id="@+id/textViewTrack1VolPercentage"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBoxMute1"
                        android:button="@drawable/custom_checkbox_selector"
                        android:layout_column="7"
                        android:checked="false"
                        android:layout_margin="@dimen/activity_min_widget_distance"
                        android:textAlignment="center"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mute"
                        android:id="@+id/textView4"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/track_1"
                android:id="@+id/textViewTrack1"
                android:textStyle="bold|italic"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight=".1"
                android:gravity="center_horizontal|top" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:layout_marginLeft="@dimen/activity_min_widget_distance"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:layout_weight=".1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:id="@+id/textViewL2"
                    android:layout_weight=".10"
                    android:textStyle="bold|italic" />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBarTrack2Pan"
                    android:layout_weight=".8"
                    android:progress="50"
                    android:max="100"
                    android:indeterminate="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:id="@+id/textViewR2"
                    android:layout_weight=".10"
                    android:textStyle="bold|italic" />

            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/pan"
                android:id="@+id/textViewPan2"
                android:layout_weight=".1"
                android:layout_gravity="center_horizontal"
                android:textIsSelectable="false"
                android:textSize="@dimen/medium_text_size"
                android:gravity="center" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_weight=".8"
                android:weightSum="1">

                <itp341.webb.jerry.greenbeatmachine.VerticalSlider
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:max="100"
                    android:id="@+id/seekBarTrack2Volume"
                    android:layout_weight=".7"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:progress="80"
                    android:indeterminate="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="80"
                        android:id="@+id/textViewTrack2VolPercentage"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBoxMute2"
                        android:button="@drawable/custom_checkbox_selector"
                        android:layout_column="7"
                        android:checked="false"
                        android:layout_margin="@dimen/activity_min_widget_distance"
                        android:textAlignment="center"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mute"
                        android:id="@+id/textViewMuteLabel2"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/track_2"
                android:id="@+id/textViewTrack2"
                android:textStyle="bold|italic"
                android:textSize="@dimen/medium_text_size"
                android:gravity="center_horizontal"
                android:layout_weight=".1" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:layout_marginLeft="@dimen/activity_min_widget_distance"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:layout_weight=".1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:id="@+id/textViewL3"
                    android:layout_weight=".10"
                    android:textStyle="bold|italic" />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBarTrack3Pan"
                    android:layout_weight=".8"
                    android:progress="50"
                    android:max="100"
                    android:indeterminate="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:id="@+id/textViewR3"
                    android:layout_weight=".10"
                    android:textStyle="bold|italic" />

            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/pan"
                android:id="@+id/textViewPan3"
                android:layout_weight=".1"
                android:layout_gravity="center_horizontal"
                android:textIsSelectable="false"
                android:textSize="@dimen/medium_text_size"
                android:gravity="center" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_weight=".8"
                android:weightSum="1">

                <itp341.webb.jerry.greenbeatmachine.VerticalSlider
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:max="100"
                    android:id="@+id/seekBarTrack3Volume"
                    android:layout_weight=".7"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:progress="80"
                    android:indeterminate="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="80"
                        android:id="@+id/textViewTrack3VolPercentage"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBoxMute3"
                        android:button="@drawable/custom_checkbox_selector"
                        android:layout_column="7"
                        android:checked="false"
                        android:layout_margin="@dimen/activity_min_widget_distance"
                        android:textAlignment="center"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mute"
                        android:id="@+id/textViewMuteLabel3"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/track_3"
                android:id="@+id/textViewTrack3"
                android:textStyle="bold|italic"
                android:textSize="@dimen/medium_text_size"
                android:gravity="center_horizontal"
                android:layout_weight=".1" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>