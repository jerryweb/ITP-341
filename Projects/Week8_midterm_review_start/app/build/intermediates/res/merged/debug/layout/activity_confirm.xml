<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}"
    android:weightSum="1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_are_purchasing"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textTicketQuantity"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textColor="@color/red"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold"
        android:gravity="fill_horizontal|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@plurals/quantityOfTickets"
        android:id="@+id/textDisplayTickets"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/min_distance_between_widgets">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/confirm"
            android:id="@+id/buttonConfirm"
            android:layout_weight=".5" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/cancel"
            android:id="@+id/buttonCancel"
            android:layout_weight=".5" />
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/jerrywebb/Documents/ITP-341/Projects/Week8_midterm_review_start/app/src/main/res/layout/activity_confirm.xml -->